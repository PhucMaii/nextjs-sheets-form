// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @db.VarChar(255) @unique
  password String @db.VarChar(255) 
  firstName String @db.VarChar(255) @map("first_name") // @map change the db table

  forms Form[]
}

model Form {
  formId Int @id @default(autoincrement()) @map("form_id")
  formName String @db.VarChar(255) @map("form_name")
  lastOpened DateTime @updatedAt @db.Timestamp() @map("last_opened")
  positions Position[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

model Position {
  positionId Int @id @default(autoincrement()) @map("position_id")
  sheetName String @db.VarChar(255) @map("sheet_name")
  row Int
  inputs Input[]

  form Form @relation(fields: [formId], references: [formId], onDelete: Cascade)
  formId Int
}

model Input {
  inputId Int @id @default(autoincrement()) @map("input_id")
  inputName String @db.VarChar(255) @map("input_name")
  inputType String @db.VarChar(10) @map("input_type")

  position Position @relation(fields: [positionId], references: [positionId], onDelete: Cascade)
  positionId Int
}
